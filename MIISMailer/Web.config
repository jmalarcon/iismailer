<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!-- BEGIN MIIS-MAILER CONFIG -->
    <!-- Comma separated list of allowed domains to send email.
    If it's empty or non-existant only the current domain is allowed -->
    <add key="mailer.alllowedDomains" value=""/>
    <add key="mailer.fromAddress" value=""/>
    <!-- It should be a valid email from the specified server in order to prevent being marked as spam-->
    <add key="mailer.fromName" value=""/>
    <!-- Separate with commas if you want more than one recipient -->
    <add key="mailer.toAddress" value=""/>
    <add key="mailer.subject" value=""/><!-- OPTIONAL-->
    <add key="mailer.server.user" value=""/>
    <add key="mailer.server.password" value=""/>
    <add key="mailer.server.host" value=""/>
    <!-- 
    OPTIONAL
    <add key="mailer.server.port" value="587"/>
    -->
    <!--
    OPTIONAL
    <add key="mailer.server.SSL" value="true"/>
    -->
    <!--
    OPTIONAL
    <add key="mailer.dest" value="https://www.server.com/landing-email-sent.html"/>
    -->
    <!--
    OPTIONAL: The file path (with write permissions) to generate a log of received form data in CSV
    It can be just a file name (formData.csv) and it will be created in the current directory 
    or absolute (such as "C:\Temp\formData.csv") which is the recommended way, but needs to set up written permissions correctly
    <add key="mailer.csv.path" value="E:\"/>
    -->
    <!-- OPTIONAL: Send email if there's a field named "email" with a valid email address. 
    Use the template included specified in "mailer.reponse.template" (you'll need both set)
    <add key="mailer.response.enabled" value="true"/>
    <add key="mailer.response.template" value="template.html"/>
    <add key="mailer.response.subject" value="Thanks for getting in touch!"/>
    -->
    <!-- END MIIS-MAILER CONFIG -->
  </appSettings>
  <system.web>
    <compilation debug="true" >
    </compilation>
  </system.web>
  <system.webServer>
    <handlers>
      <!-- MIIS MAILER -->
      <add name="miis.mailer" path="miis.mailer" verb="POST" type="MIISMailer.MIISMailerHandler, MIISMailer" resourceType="Unspecified" requireAccess="None"/>
    </handlers>
  </system.webServer>
</configuration>
